<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateGoal"
    android:background="@color/primaryBackColor"

    >

        <ImageView
            android:id="@+id/arrowBackBtn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/baseline_arrow_back_24" />
        <TextView
            android:id="@+id/createNewGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create New Goal"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:layout_below="@+id/arrowBackBtn"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/taskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name of Task Title "
            android:layout_below="@+id/createNewGoal"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/taskTitleEd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskTitle"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:ems="15"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/taskDueDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Due Date"
            android:layout_below="@+id/taskTitleEd"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/dueDatePicker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/taskDueDate"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="15/02/2002"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:inputType="date"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginStart="20dp"
            />
        <TextView
            android:id="@+id/phasesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phases"
            android:layout_below="@+id/dueDatePicker"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/addNewPhases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ add new phase"
            android:layout_below="@+id/phasesTitle"
            android:textColor="#B0DDDCDC"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:background="@drawable/layout_background_add"
            />

        <TextView
            android:id="@+id/notesTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:layout_below="@+id/addNewPhases"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/notesEdText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tap to add notes"
            android:textColorHint="#B0DDDCDC"
            android:layout_below="@+id/notesTitle"
            android:textColor="#B0DDDCDC"
            android:inputType="text"
            android:minWidth="48dp"
            android:maxWidth="48dp"
            android:textSize="18sp"
            android:paddingStart="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:background="@drawable/layout_background_add"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/createBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/layout_shape_btn"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:text="Create"
            android:textAllCaps="true"
            />


</RelativeLayout>