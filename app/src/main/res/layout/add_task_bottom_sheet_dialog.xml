<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dialog"
    android:backgroundTint="#DDDDDD"
    android:padding="20dp"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New phase"
        android:textSize="20sp"
        android:textColor="@color/black"
        />

    <EditText
        android:id="@+id/newtaskTitleEdText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint=" Enter task title"
        android:backgroundTint="@color/black"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/setDateLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/btn_back_shape"
            android:padding="8dp"
            android:layout_marginEnd="10dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_date_range_24"
                android:layout_marginEnd="5dp"
                />

            <TextView
                android:id="@+id/setDateTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set date"
                android:layout_gravity="center"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/setReminderLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/btn_back_shape"
            android:padding="8dp"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_access_time_24"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set reminder"
                android:layout_gravity="center"
                android:textColor="#81000000"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/saveBtnBSD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#1F58E4"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        />
</LinearLayout>