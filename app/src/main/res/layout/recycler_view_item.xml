<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_shade_fragment"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:padding="5dp"
    >


    <ImageView
        android:id="@+id/imageViewRecyclerItem"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_access_time_24"
        android:layout_alignParentStart="true"

        />

        <TextView
            android:id="@+id/tvRecyclerItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/imageViewRecyclerItem"
            android:layout_marginStart="10dp"
            />
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/linearProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRecyclerItemTitle"
        android:layout_toRightOf="@id/imageViewRecyclerItem"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="50dp"
        app:indicatorColor="@color/black"
        app:trackColor="#0538F6"
        />


    <TextView
        android:id="@+id/progressPercentage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRecyclerItemTitle"
        android:layout_alignParentEnd="true"
        android:text="50%"
        android:textColor="@color/black" />

</RelativeLayout>